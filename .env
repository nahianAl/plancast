# PlanCast Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
ENVIRONMENT=development  # development, production, staging

# Database Configuration
# For local development
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=plancast
POSTGRES_USER=plancast_user
POSTGRES_PASSWORD=plancast_password

# For production (Railway/Heroku) - this will override local settings
# DATABASE_URL=postgresql://username:password@host:port/database

# PostgreSQL superuser password (for database setup script)
POSTGRES_SUPERUSER_PASSWORD=your_superuser_password

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Storage
UPLOAD_DIR=temp/uploads
EXPORT_DIR=output/generated_models
MAX_FILE_AGE_HOURS=24

# Database Debugging (set to true to see SQL queries)
SQL_ECHO=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services (optional)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
# SENTRY_DSN=your_sentry_dsn

# Email Configuration (for user verification)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@plancast.com
